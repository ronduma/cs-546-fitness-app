<div class="container text-center">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-md-4">
            <i class="fa fa-solid fa-dumbbell fa-2xl mb-3"></i>
            <h1>Edit Profile</h1> 
            <h5 class="mt-3 mb-4">Your Information</h5> 
            <form class="row g-3" method="POST" id="registration-form" action="/profile/edit" novalidate>
                <div class="col-md-6 form-floating gx-1">
                    <input type="number" class="form-control" name="ageInput" id="ageInput" required="required" placeholder="Age" value="{{age}}">
                    <label for="ageInput">Age</label>
                </div>
                <div class="col-md-6 form-floating gx-1">
                    <input type="number" class="form-control" name="weightInput" id="weightInput" required="required" placeholder="Weight" value="{{weight}}">
                    <label for="weightInput">Weight</label>
                </div>
                <div class="col-md-6 form-floating gx-1">
                    <input type="number" class="form-control" name="heightFeetInput" id="heightFeetInput" required="required" placeholder="Height (Feet)" value="{{heightFt}}">
                    <label for="heightFeetInput">Height (Feet)</label>
                </div>
                <div class="col-md-6 form-floating gx-1">
                    <input type="number" class="form-control" name="heightInchesInput" id="heightInchesInput" required="required" placeholder="Height (Inches)" value="{{heightIn}}">
                    <label for="heightInchesInput">Height (Inches)</label>
                </div>
                <div class="col-12 form-floating gx-1">
                    <input type="text" class="form-control" name="studioInput" id="studioInput" required="required" placeholder="Gym/Studio" value="{{studio}}">
                    <label for="studioInput">Studio</label>
                </div>
                <div class="col-12 form-floating gx-1">
                    <input type="text" class="form-control" name="coachInput" id="coachInput" required="required" placeholder="Coach" value="{{coach}}">
                    <label for="coachInput">Coach</label>
                </div>
                <div class="col-12 form-floating gx-1">
                    <textarea name="goalsInput" class="form-control" id="goalsInput" style="height:15vh">{{goals}}</textarea>
                    <label for="goalsInput">Goals</label>
                </div>
                <div class="error">{{error}}</div>
                <div class="col-12">
                    <a href="/profile" class="btn btn-secondary">Go Back</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
