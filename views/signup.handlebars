<div class="d-flex flex-column justify-content-center align-items-center mt-5">
    {{!-- <div>{{message}}</div> --}}
    <h1>Welcome to <span class="navbar-brand">jimbro</span></h1>
    <form method="POST" id="registration-form" action="/signup">
        <div class="form-row my-3">
            <input type="text" name="usernameInput" id="usernameInput" placeholder="Username">
        </div>
        <div class="form-row my-3">
            <input type="email" name="emailInput" id="emailInput" placeholder="example@email.com">
        </div>
        <div class="form-row my-3">
            <input type="password" name="passwordInput" id="passwordInput" placeholder="Password">
        </div>
        <div class="form-row my-3">
            <input type="password" name="confirmPasswordInput" id="confirmPasswordInput" placeholder="Confirm Password">
        </div>
        <div class="form-row d-flex justify-content-center my-3">
            <button type="submit">Submit</button>
        </div>
    </form>
    <div>{{error}}</div>
    <a href="/login">Already have an account? Click here to log-in</a>
</div>